<div class="card">
    <div class="card-content">
        <a class="card-title" href="/song/{{id}}">
            {{ content }}
        </a>
    </div>
    <div class="card-action">
        <a href="/user/{{ author.id }}" class="">{{ author.local.email }}</a>
        <span class="song__date">{{ createdAt }}</span>
        <span class="song_comments">{{ comments.length }} Comments</span>
        <form class="" action="/song/{{id}}?_method=DELETE" method="POST">
            <button type="submit" name="button">Delete</button>
        </form>

    </div>
</div>